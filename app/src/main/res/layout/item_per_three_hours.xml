<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/perThreeHoursTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="23.0 C"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/perThreeHoursIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:adjustViewBounds="true"
            android:foregroundGravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/ic_weather_sunny"
            app:layout_constraintBottom_toTopOf="@+id/perThreeHoursHourInfo"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@+id/perThreeHoursTemperature"
            app:layout_constraintStart_toStartOf="@+id/perThreeHoursTemperature"
            app:layout_constraintTop_toBottomOf="@+id/perThreeHoursTemperature" />

        <TextView
            android:id="@+id/perThreeHoursHourInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="12:00"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/perThreeHoursTemperature"
            app:layout_constraintStart_toStartOf="@+id/perThreeHoursTemperature"
            app:layout_constraintTop_toBottomOf="@+id/perThreeHoursTemperature" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>