<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/cyan_400</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="background">@color/primary_light</item>
        <item name="colorSurface">@color/cyan_200</item>
        <item name="colorSecondaryVariant">@color/cyan_700</item>
<!--        <item name="colorAccent">@color/secondaryColor</item>-->
<!--        <item name="colorSecondary">@color/secondaryColor</item>-->
<!--        <item name="android:colorMode">@color/secondaryColor</item>-->
        <!--Removing actionbar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Optional, but recommended for full edge-to-edge rendering -->
        <!--        <item name="android:statusBarColor">@android:color/transparent</item>-->

    </style>

    <style name="OrangeTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>

        <!--        <item name="colorSecondary">@color/secondaryColor</item>-->
        <item name="android:background">@color/secondaryLightColor</item>
        <item name="colorAccent">@color/colorDayAccent</item>
        <item name="android:textColorPrimary">@color/light_theme_text</item>
        <item name="android:textColorSecondary">@color/light_theme_text_secondary</item>
        <!--Removing actionbar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CardViews" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/primaryDarkColor</item>
        <item name="cardCornerRadius">@dimen/corner_radius</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="NightCardView" parent="CardView.Dark">
        <item name="cardBackgroundColor">?attr/colorPrimaryDark</item>
        <item name="cardCornerRadius">@dimen/corner_radius</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="NightCardViewLand" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/primaryDarkColor</item>
        <item name="cardCornerRadius">@dimen/corner_radius_smaller</item>
        <item name="cardUseCompatPadding">false</item>
    </style>

    <style name="DayCardView" parent="CardView.Light">
        <item name="cardBackgroundColor">?attr/colorSecondary</item>
<!--        <item name="cardBackgroundColor">@color/secondaryLightColor</item>-->
        <item name="cardCornerRadius">@dimen/corner_radius</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:textColor">@color/light_theme_text</item>
    </style>
    <style name="DayCardViewLight" parent="CardView.Light">
        <item name="cardBackgroundColor">?attr/colorSecondary</item>
        <item name="cardCornerRadius">@dimen/corner_radius</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:textColor">@color/light_theme_text_secondary</item>
    </style>
    <style name="DayTextView" parent="Widget.MaterialComponents.TextView">
<!--        <item name="cardBackgroundColor">@</item>-->
        <item name="cardBackgroundColor">@color/green_A100</item>

        <item name="android:textColor">?attr/titleTextColor</item>
    </style>

    <style name="DayCardViewLand" parent="CardView.Dark">
        <item name="cardBackgroundColor">?attr/cardBackgroundColor</item>

        <item name="android:textColor">?attr/titleTextColor</item>
<!--        <item name="cardBackgroundColor">@color/secondaryLightColor</item>-->
        <item name="cardCornerRadius">@dimen/corner_radius_smaller</item>
        <item name="cardUseCompatPadding">false</item>
<!--        <item name="android:textColor">@color/light_theme_text</item>-->
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="android:textColorSecondary">#EEEEEE</item>
    </style>

    <style name="NoToolbarTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">#EEEEEE</item>
    </style>

    <style name="MyMaterialTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">?attr/editTextBackground</item>
        <item name="lineHeight">@dimen/corner_radius</item>
        <item name="android:shadowRadius">5.5</item>

        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/textAppearanceCaption</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="ChartMaterialTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">#C46D6D6D</item>
        <item name="lineHeight">@dimen/corner_radius</item>
        <item name="android:shadowRadius">5.5</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black_text_secondary</item>
        <item name="android:textStyle">bold|italic</item>
<!--        <item name="android:layout_marginLeft">25dp</item>-->
<!--        <item name="android:layout_marginRight">25dp</item>-->
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="MyMaterialTextViewLand" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@color/secondaryLightColor</item>
        <item name="lineHeight">@dimen/corner_radius_smaller</item>
        <item name="android:shadowRadius">2.5</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/light_theme_text_secondary</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="importantTextView" parent="DayTextView">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:foregroundGravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="low_important_text">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textStyle">italic|bold</item>
    </style>
</resources>
